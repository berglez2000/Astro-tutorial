---
import { FeatureData } from "../interfaces/FeatureData";
export interface Props {
  featureData: FeatureData;
  dark?: boolean;
}
const { featureData, dark } = Astro.props as Props;
---

<div class={`card ${dark ? "dark" : ""}`}>
  <h3>{featureData.title}</h3>
  <p>{featureData.body}</p>
</div>

<style>
  .card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
  }
  .dark {
    background: var(--color-primary);
    color: #fff;
  }
</style>
